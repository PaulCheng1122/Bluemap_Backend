{
  "compilerOptions": {
    "target": "ES2020",                // Compatible with modern Node.js (18/20)
    "module": "CommonJS",              // CommonJS module system for backend
    "lib": ["ES2020"],                 // Only ES standard library, no DOM types
    "rootDir": "src",                  // Source code directory
    "outDir": "dist",                  // Compiled JavaScript output directory
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",        // Node-style module resolution
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmit": false,                   // Must emit JS files on build
    "allowJs": false,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]                 // Path alias for cleaner imports
    }
  },
  "include": ["src/**/*.ts"],          // Include all TS files under src
  "exclude": ["node_modules", "dist"]  // Exclude dependencies and build output
}
